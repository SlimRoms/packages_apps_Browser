<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrowserTheme" parent="@android:style/Theme.Material">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    <style name="PreferencesTheme" parent="@android:style/Theme.Material" />
    <style name="DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="ActionBarStyle" parent="@android:style/Theme.Material">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#ff111111</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Suggestions" parent="@android:style/Widget.Material.AutoCompleteTextView">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@color/primary</item>
    </style>
</resources>
